@model SV20T1020508.DomainModels.Customer;

@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />

            <div class="form-group">
                <label>Tên khách hàng:</label>
                @*
                <input type="text" class="form-control" name="CustomerName" autofocus value="@Model.CustomerName">
                *@
                @*Sử dụng APS.NET HTML *@
                @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessage("CustomerName", new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessage("ContactName", new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage("Email", new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
                @*
                <select class="form-control" name="Province">
                <option value="">-- Chọn tỉnh thành --</option>
                @foreach (var item in SV20T1020508.BusinessLayers.CommonDataService.ListOfProvinces())
                {
                if (item.ProvinceName == Model.Province)
                {
                <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                }
                else
                {
                <option value="@item.ProvinceName">@item.ProvinceName</option>
                }
                }
                </select>
                *@
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class = "form-control select2" })
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color: #f00" })
            </div>

            <div class="form-group">
                <label>Trạng thái:</label>
                @if (Model.IsLocked)
                {
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="radio1" name="Province" value="Tài khoản bị khóa" checked>
                        Tài khoản bị khóa
                        <label class="form-check-label" for="radio1"></label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="radio2" name="Province" value="Tài khoản không bị khóa">
                        Tài khoản không bị khóa
                        <label class="form-check-label" for="radio2"></label>
                    </div>
                }
                else
                {
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="radio1" name="Province" value="Tài khoản bị khóa">
                        Tài khoản bị khóa
                        <label class="form-check-label" for="radio1"></label>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" id="radio2" name="Province" value="Tài khoản không bị khóa" checked>
                        Tài khoản không bị khóa
                        <label class="form-check-label" for="radio2"></label>
                    </div>
                }
            </div>

            <div class="form-group">
                @Html.ValidationMessage("Error", new { @style = "color: #f00" })
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>