@model OrderSearchInput;

@{
    ViewBag.Title = "Quản lý đơn hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!--Form đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Order/Search" method="get" data-container="#searchResult">
            <div class="row">

                <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />

                <div class="col-sm-2">
                    <select class="form-control" name="@nameof(Model.Status)" id="status">
                        <option value="0">-- Trạng thái --</option>
                        <option value="@Constants.ORDER_INIT">@(new Order { Status = Constants.ORDER_INIT }.StatusDescription)</option>
                        <option value="@Constants.ORDER_ACCEPTED">@(new Order { Status = Constants.ORDER_ACCEPTED }.StatusDescription)</option>
                        <option value="@Constants.ORDER_SHIPPING">@(new Order { Status = Constants.ORDER_SHIPPING }.StatusDescription)</option>
                        <option value="@Constants.ORDER_FINISHED">@(new Order { Status = Constants.ORDER_FINISHED }.StatusDescription)</option>
                        <option value="@Constants.ORDER_CANCEL">@(new Order { Status = Constants.ORDER_CANCEL }.StatusDescription)</option>
                        <option value="@Constants.ORDER_REJECTED">@(new Order { Status = Constants.ORDER_REJECTED }.StatusDescription)</option>
                    </select>
                </div>
                <div class="col-sm-2" style="margin-left: -16px">
                    <input id="daterange" type="text" name="@nameof(Model.DateRange)" class="form-control daterange-picker" value="@nameof(Model.DateRange)" />
                </div>
                <div class="col-sm-8 input-group">
                    <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />

                    <input type="text" name="@nameof(Model.SearchValue)" class="form-control" value="@Model.SearchValue"
                           placeholder="Tìm kiếm theo tên khách hàng hoặc tên người giao hàng">
                    <span class="input-group-btn">
                        <button type="submit" id="search-btn" class="btn btn-flat btn-info">
                            <i class="fa fa-search"></i> Tìm kiếm
                        </button>
                    </span>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm-->
        <div id="searchResult">
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $("#status").change(function () {
                doSearch($("#formSearch"), 1);
            });

            $("#daterange").submit(function () {
                doSearch($("#formSearch"), 1);
                return;
            });

            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(this, 1);
                return;
            });
            doSearch("#formSearch", @Model.Page);
        });
        function doSearch(formSearch, page) {
            var action = $(formSearch).prop("action");
            var method = $(formSearch).prop("method");
            var container = $(formSearch).data("container");

            var searchData = $(formSearch).serializeArray();
            searchData.push({ "name": "Page", "value": page });

            $.ajax({
                url: action,
                type: method,
                data: searchData,
                async: false,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $(container).html(data);
                }
            });
        }
    </script>
}