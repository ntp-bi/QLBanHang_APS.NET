@model ProductSearchInput

@{
    ViewBag.Title = "Quản lý mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- FORM nhập đầu vào tìm kiếm-->
        <form id="formSearch" action="~/Product/Search" method="get" data-container="#searchResult">
            <div class="row">

                <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />

                <div class="col-sm-3">
                    @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.Categorys(), new { @class = "form-control" })
                </div>
                <div class="col-sm-3" style="margin-left: -16px">
                    @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.Suppliers(), new { @class = "form-control" })
                </div>
                <div class="col-sm-6 input-group">
                    <input type="hidden" name="@nameof(Model.PageSize)" value="@Model.PageSize" />

                    <input type="text" name="@nameof(Model.SearchValue)" class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm" value="@Model.SearchValue">

                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>

                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left: 5px">
                            <i class="fa fa-plus"></i> Bổ sung
                        </a>
                    </div>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm-->
        <div id="searchResult">
            
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function (e) {
            $("#CategoryID").change(function () {
                doSearch("#formSearch", 1); // Gửi yêu cầu tìm kiếm khi giá trị thay đổi
            });

            $("#SupplierID").change(function () {
                doSearch("#formSearch", 1); // Gửi yêu cầu tìm kiếm khi giá trị thay đổi
            });

            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(this, 1);
                return;
            });
            doSearch("#formSearch", @Model.Page);
        });
        function doSearch(formSearch, page) {
            var action = $(formSearch).prop("action");
            var method = $(formSearch).prop("method");
            var container = $(formSearch).data("container");

            var searchData = $(formSearch).serializeArray();
            searchData.push({ "name": "Page", "value": page });
            $.ajax({
                url: action,
                type: method,
                data: searchData,
                async: false,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $(container).html(data);
                }
            });
        }
    </script>
}